    public void konekDB(){
        try{
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
            koneksi = DriverManager.getConnection("jdbc:mysql://localhost:3306/db_tubes","root","");
            stat = koneksi.createStatement();
        }
        catch(Exception e){
            System.err.println("Error : "+e.getMessage());
        }
    }
    public void Login(){
        try{
            ResultSet set;
            String result = "o";
            konekDB();
            String sql = "Select username, password from login_m where username = '"+jTextField1.getText().trim()+"'"+"and password = '"+jPasswordField1.getText().trim()+"'";
            set = stat.executeQuery(sql);
            
            if(set.next()){
                JOptionPane.showMessageDialog(null, "Berhasil Login!");
                
                this.dispose();
                new Form_laporan().setVisible(true);
            }
            else{
                JOptionPane.showMessageDialog(null, "Gagal Login!!","Peringatan!", JOptionPane.WARNING_MESSAGE);
                jTextField1.requestFocusInWindow();
                jTextField1.setText("");
                jPasswordField1.setText("");
            }
        }
        catch(Exception e){
            System.out.println("Kesalahan : "+e.toString());
        }
    }
